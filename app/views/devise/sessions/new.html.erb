<div class="text-center">
  <h2 class="text-3xl">Log in to Turbochat</h2>

  <%= form_for(resource, as: resource_name, url: session_path(resource_name), html: {class: "border border-gray-400 mx-auto max-w-max px-4 my-4"}) do |f| %>
    <h3 class="text-xl mt-2"> Sign In </h3>
    <div class="field justify-start">
      <!--<%= f.label :email, class:"text-left" %><br />-->
      <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"border border-gray-400 my-2" %>
    </div>

    <div class="field justify-start">
      <!--<%= f.label :password, class:"text-left" %><br />-->
      <%= f.password_field :password, autocomplete: "current-password", placeholder:"Password", class:"border border-gray-400 my-2" %>
    </div>

    <% if devise_mapping.rememberable? %>
      <div class="field">
        <%= f.check_box :remember_me %>
        <%= f.label :remember_me %>
      </div>
    <% end %>

    <div class="actions">
      <%= f.submit "Submit", class: "bg-fuchsia-400 hover:bg-fuchsia-500 text-fuchsia-700 font-semibold hover:text-white py-1 px-2 my-2 border border-fuchsia-500 hover:border-transparent rounded max-w-48" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
</div>
