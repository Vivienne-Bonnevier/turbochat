<div class="text-center">
  <h2 class="text-3xl">Sign Up for Turbochat</h2>

<%= form_for(resource, as: resource_name, url: registration_path(resource_name), html: {class: "border border-gray-400 mx-auto max-w-max px-4 my-4"}) do |f| %>
  <h3 class="text-xl mt-2"> Sign Up </h3>
  <%= render "devise/shared/error_messages", resource: resource %>

  <div class="field">
    <!--<%= f.label :email %><br />-->
    <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder:"Email", class:"border border-gray-400 my-2" %>
  </div>

  <div class="field">
    <!--<%= f.label :password %>-->
    <!--<% if @minimum_password_length %>
    <em>(<%= @minimum_password_length %> characters minimum)</em>
    <% end %><br />-->
    <%= f.password_field :password, autocomplete: "new-password", placeholder:"Password (6 chara min)", class:"border border-gray-400 my-2" %>
  </div>

  <div class="field">
    <!--<%= f.label :password_confirmation %><br />-->
    <%= f.password_field :password_confirmation, autocomplete: "new-password", placeholder:"Confirm Password", class:"border border-gray-400 my-2" %>
  </div>

  <div class="actions">
    <%= f.submit "Submit", class: "bg-fuchsia-400 hover:bg-fuchsia-500 text-fuchsia-700 font-semibold hover:text-white py-1 px-2 my-2 border border-fuchsia-500 hover:border-transparent rounded max-w-48" %>
  </div>
<% end %>

<%= render "devise/shared/links" %>
