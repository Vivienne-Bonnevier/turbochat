<div id="chatroom_container" class="container flex flex-row max-w-full h-full">
  
  <div id="side_panel", class="flex-col w-1/5 bg-gray-200 p-4">
    <h5 class="text-2xl font-bold"><%= current_user.email %></h5>
    <h4 class="text-2xl font-semibold">Users</h4>
    <%= turbo_stream_from "users" %>
    <div id="users">
      <%= render @users %>
    </div>
    <h4 class="text-2xl font-semibold">Rooms</h4>
    <%= render "new_room_form" %>
    <%= turbo_stream_from "rooms" %>
    <div id="rooms">
      <%= render @rooms %>
    </div>
  </div>

  <turbo-frame id="room_container" class="bg-gray-800 max-w-full mx-auto w-4/5">
    <% if @single_room %>
      <div id="single_room" class="flex flex-col content-end h-full">
        <div class="text-center shadow-xl bg-gray-500 border-black border-solid"><h3 class="text-2xl text-black font-bold"><%= @single_room.name || @user.email %></h3></div>
        <%= turbo_stream_from @single_room %>
        <div id="messages" class="overflow-y-scroll h-full text-white">
          <%= render @messages %>
        </div>
        <%= render "messages/new_message_form" %>
      </div>
    <% end %>
  </turbo-frame>

</div>