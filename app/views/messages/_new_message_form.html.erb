<div class="form-group msg-form">
  <%= form_with model: [@single_room, @message], remote: true, class: "flex flex-row w-full", data: { controller:"reset-form", action: "turbo:submit-end->reset-form#reset" }  do |f| %>
    <%= f.text_field :body, id: "chat-text", class:"w-full", autocomplete: "off" %>
    <%= f.submit data: {disable_with: false}, class: "bg-fuchsia-400 hover:bg-fuchsia-500 text-fuchsia-700 font-semibold hover:text-white py-2 px-4 border border-fuchsia-500 hover:border-transparent rounded max-w-48" %>
  <% end %>
</div>